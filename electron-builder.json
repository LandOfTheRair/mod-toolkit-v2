{
  "asar": false,
  "appId": "land.rair.modkit",
  "productName": "Land of the Rair ModKit",
  "directories": {
    "output": "release/",
    "buildResources": "../dist"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.map",
    "!package.json",
    "!package-lock.json",
    {
      "from": "../dist",
      "filter": ["**/*"]
    }
  ],
  "artifactName": "LandOfTheRairModdingTools.${ext}",
  "win": {
    "icon": "dist/assets/icons",
    "target": ["zip"],
    "publish": ["github"]
  },
  "portable": {
    "splashImage": "dist/assets/icons/electron.bmp"
  },
  "mac": {
    "icon": "dist/assets/icons",
    "target": ["dmg"]
  },
  "linux": {
    "icon": "dist/assets/icons",
    "target": ["AppImage"]
  }
}
